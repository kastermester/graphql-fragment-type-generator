{
    "compilerOptions": {
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es5",
        "declaration": true,
        "noEmit": false,
        "newLine": "LF",
        "outDir": "lib",
        "noImplicitAny": true,
        "sourceMap": true,
        "sourceRoot": "src",
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "include": [
        "types/*.d.ts",
        "src/**/*.ts"
    ]
}
